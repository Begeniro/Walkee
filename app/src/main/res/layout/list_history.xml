<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="30dp"
    android:layout_height="117dp"
    android:gravity="center"
    android:background="@drawable/list_history"
    >

    <TextView
        android:id="@+id/day_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:textSize="38sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="45dp"
        android:gravity="center"
        android:background="@drawable/day_bg"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="153dp"
        android:layout_marginLeft="153dp"
        android:layout_marginEnd="153dp"
        android:layout_marginRight="153dp"
        android:fontFamily="@font/roboto"
        android:text="Steps"
        android:textAlignment="center"
        android:textColor="@color/kelabu3"
        android:textSize="18sp"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/steps_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="130dp"
        android:layout_marginRight="130dp"
        android:fontFamily="@font/roboto"
        android:text="1175"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:gravity="center_horizontal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="248dp"
        android:fontFamily="@font/roboto"
        android:textSize="13sp"
        android:textColor="@color/kelabu"
        android:text="km"
        />
    <TextView
        android:id="@+id/km_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/roboto"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="300"
        />
    <View
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="43dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="290dp"
        android:background="@color/kelabu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="315dp"
        android:fontFamily="@font/roboto"
        android:textSize="13sp"
        android:textColor="@color/kelabu"
        android:text="cal"
        />
    <TextView
        android:id="@+id/cal_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/roboto"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="20"
        />
</RelativeLayout>