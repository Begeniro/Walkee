<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="30dp"
    android:layout_height="117dp"
    android:gravity="center"
    android:background="@drawable/list_history"
    >

    <TextView
        android:id="@+id/day_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:textSize="38sp"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="65dp"
        android:gravity="center"
        android:background="@drawable/day_bg"
        />

    <TextView
        android:id="@+id/month_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="7dp"
        android:width="60dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="June"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:rotation="270"
        android:transformPivotX="32dp"
        android:transformPivotY="13dp"
        />

    <TextView
        android:id="@+id/year_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="25dp"
        android:width="45dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="2021"
        android:textColor="@color/biru"
        android:textSize="8sp"
        android:rotation="270"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="153dp"
        android:layout_marginLeft="153dp"
        android:layout_marginEnd="153dp"
        android:layout_marginRight="153dp"
        android:fontFamily="@font/roboto"
        android:text="Steps"
        android:layout_marginTop="-3dp"
        android:textAlignment="center"
        android:textColor="@color/kelabu3"
        android:textSize="20sp"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/steps_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="130dp"
        android:layout_marginRight="130dp"
        android:fontFamily="@font/roboto"
        android:text="900"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:gravity="center_horizontal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="248dp"
        android:fontFamily="@font/roboto"
        android:textSize="13sp"
        android:textColor="@color/kelabu"
        android:text="km"
        />
    <TextView
        android:id="@+id/km_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/roboto"
        android:textSize="20sp"
        android:textColor="@color/kelabu3"
        android:text="300"
        />
    <View
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="43dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="290dp"
        android:background="@color/biru"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="315dp"
        android:fontFamily="@font/roboto"
        android:textSize="13sp"
        android:textColor="@color/kelabu"
        android:text="cal"
        />
    <TextView
        android:id="@+id/cal_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/roboto"
        android:textSize="20sp"
        android:textColor="@color/kelabu3"
        android:text="20"
        />
</RelativeLayout>